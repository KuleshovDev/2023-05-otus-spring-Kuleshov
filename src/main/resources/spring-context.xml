<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionService" class="ru.otus.service.QuestionService">
        <constructor-arg index="0" value="questionsAndAnswers.csv"/>
    </bean>

    <bean id="answerService" class="ru.otus.service.AnswerService">
        <constructor-arg index="0" value="questionsAndAnswers.csv"/>
    </bean>

    <bean id="printService" class="ru.otus.service.PrintService">
        <constructor-arg ref="questionService"/>
        <constructor-arg ref="answerService"/>
    </bean>

</beans>
